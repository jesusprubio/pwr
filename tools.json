{
  "scripts": {
    "title": "Project scripts",
    "pkg": "ntl",
    "comm": { "bin": "ntl" },
    "fav": true
  },
  "install": {
    "title": "Find/install packages",
    "pkg": "emma-cli",
    "comm": { "bin": "emma" },
    "fav": true
  },
  "clean": {
    "title": "Clean lock file/node_modules",
    "pkg": "del-nm-cli",
    "comm": [
      { "bin": "del-nm" },
      { "bin": "npm", "args": "i" }
    ],
    "fav": true
  },
  "publish": {
    "title": "Publish to npm",
    "pkg": "np",
    "comm": [
      { "bin": "npm", "args": ["pack", "--dry-run"] },
      { "bin": "np" }
    ],
    "fav": true
  },
  "check": {
    "title": "Dependency check/update",
    "pkg": "npm-check",
    "comm": [
      { "bin": "npm-check", "args": ["-u", "--ignore=dist/*"] },
      { "bin": "npm", "args": "audit" }
    ],
    "fav": true
  },
  "fkill": {
    "title": "Kill process",
    "pkg": "fkill-cli",
    "comm": { "bin": "fkill" },
    "fav": true
  },
  "name": {
    "title": "Check name available",
    "pkg": "npm-name",
    "param": {
      "type": "text",
      "name": "name",
      "message": "package name",
      "initial": "pwr"
    },
    "comm": { "bin": "npm-name", "args": "NAME" }
  },
  "init": {
    "title": "Start a new project",
    "pkg": "generator-nm",
    "comm": [
      { "bin": "yo", "args": "nm" },
      { "bin": "open-editor", "args": "." }
    ]
  },
  "coverage": {
    "title": "Tests with code coverage",
    "pkg": "nyc",
    "comm": { "bin": "nyc", "args": ["npm", "test"] }
  },
  "ci": {
    "title": "Tests in local Travis",
    "pkg": "trevor",
    "comm": { "bin": "trevor" }
  },
  "analysis": {
    "title": "Dependency analysis",
    "pkg": "npm-consider",
    "comm": { "bin": "npm-consider", "args": ["install"] }
  },
  "top": {
    "title": "System monitoring",
    "pkg": "vtop",
    "comm": { "bin": "vtop" }
  },
  "network": {
    "title": "Network information",
    "pkg": "fast-cli",
    "comm": [
      { "bin": "is-online" },
      { "bin": "internal-ip" },
      { "bin": "public-ip" },
      { "bin": "fast", "args": "--upload" }
    ]
  },
  "labels": {
    "title": "Add GitHub labels",
    "pkg": "copy-github-labels-cli",
    "param": [
      {
        "type": "text",
        "name": "token",
        "message": "personal access token"
      },
      {
        "type": "text",
        "name": "to",
        "message": "repo to change",
        "initial": "username/repo"
      },
      {
        "type": "text",
        "name": "from",
        "message": "repo to get the labels",
        "initial": "jesusprubio/pwr"
      }
    ],
    "comm": { "bin": "copy-github-labels", "args": ["-t", "TOKEN", "FROM", "TO"] }
  },
  "http": {
    "title": "Start HTTP server",
    "pkg": "http-server",
    "comm": { "bin": "http-server" },
    "fav": true
  },
  "share": {
    "title": "Share actual folder online",
    "pkg": "share-cli",
    "comm": { "bin": "share", "args": "." }
  },
  "gitignore": {
    "title": "Fetch gitignore files for any of your new projects",
    "pkg": "gitignore",
    "param": [
      {
        "type": "text",
        "name": "type",
        "message": "type of gitignore template",
        "initial": "Node"
      }
    ],
    "comm": [
      { "bin": "gitignore", "args": "TYPE"  }
    ]
  },
  "license": {
    "title": "Generate s license",
    "pkg": "license",
    "param": [
      {
        "type": "text",
        "name": "owner",
        "message": "the organisation/owner that holds the copy",
        "initial": "Myself"
      },
      {
        "type": "text",
        "name": "project",
        "message": "the name of the project",
        "initial": "MyProject"
      },
      {
        "type": "text",
        "name": "year",
        "message": "copyright year",
        "initial": "2020"
      },
      {
        "type": "text",
        "name": "license",
        "message": "license type",
        "initial": "mit"
      }
    ],
    "comm": { "bin": "license", "args": ["-o", "OWNER", "-p", "PROJECT", "-y", "YEAR", "LICENSE"] }
  },
  "package-json": {
    "title": "Get the package.json of an npm package",
    "pkg": "package-json-cli",
    "param": [
      {
        "type": "text",
        "name": "package",
        "message": "name of a package from the npm registry",
        "initial": "ava"
      }],
    "comm": { "bin": "package-json", "args": "PACKAGE" }
  },
  "screenshot": {
    "title": "Take screenshot",
    "pkg": "puppeteer-cli",
    "param": [
      {
        "type": "text",
        "name": "url",
        "message": "url of website to take screenshot",
        "initial": "https://github.com/jesusprubio/pwr"
      },
      {
        "type": "text",
        "name": "path",
        "message": "name of the file",
        "initial": "shot.png"
      }
    ],
    "comm": [
      { "bin": "puppeteer", "args": ["screenshot", "URL", "PATH"] }
    ]
  }
}
